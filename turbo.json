{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true,
      "env": [
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_DATABASE_ID",
        "CLOUDFLARE_D1_TOKEN",
        "CI"
      ]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "cache": false,
      "persistent": true,
      "env": [
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_DATABASE_ID",
        "CLOUDFLARE_D1_TOKEN",
        "CI"
      ]
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "cache": false,
      "persistent": true,
      "env": [
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID",
        "VITE_SERVER_URL",
        "CI"
      ]
    }
  }
}
